{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "range",
      "id": "font_size_nav_item",
      "label": "Font Size",
      "min": 12,
      "max": 48,
      "step": 1,
      "default": 16
    },
    {
      "type": "color",
      "id": "color_nav_item",
      "label": "Color",
      "default": "#1d1f44"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Header"
    }
  ]
}
{% endschema %}

{{ 'header.scss' | asset_url | stylesheet_tag }}
<div class="navigation-content" style>
  <ul class="main-menu-navigation">
    {% for link in linklists['main-menu'].links -%}
      <li class="navigation-item">
        <a href="{{ link.url }}"
          ><span style="font-size: {{ section.settings.font_size_nav_item }}; color: {{ section.settings.color_nav_item }};">
            {{- link.title -}}
          </span></a
        >
      </li>
    {%- endfor %}
  </ul>
</div>
